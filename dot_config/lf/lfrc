# Refresh rate in seconds
set period 5
set info size
set info dircounts

# Custom Functions

cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

cmd mkfile ${{
  printf "File Name: "
  read ans
  $EDITOR $ans
}}

cmd sudomkfile ${{
  printf "File Name: "
  read ans
  sudo $EDITOR $ans
}}

# Archive bindings
cmd unarchive ${{
  case "$f" in
    *.zip) unzip "$f" ;;
    *.tar.gz) tar -xzvf "$f" ;;
    *.tar.bz2) tar -xjvf "$f" ;;
    *.tar) tar -xvf "$f" ;;
    *)echo "Unsupported format" ;;
  esac
}}

cmd zip %zip -r "$f" "$f"
cmd tar %tar cvf "$f.tar" "$f"
cmd targz %tar cvzf "$f.tar.gz" "$f"
cmd tarbz2 %tar cjvf "$f. tar.bz2" "$f"

# Bindings
# Remove some defaults
map m
map o
map n
map "'"
map '"'

# clear mark from pasted files
map p : paste; clear

# Basic functions
map x delete
map mf mkfile
map ms sudomkfile
map md mkdir

#Archive Mappings
map az zip
map at tar
map ag targz
map ab tarbz2
map au unarchive
